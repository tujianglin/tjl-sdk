{
	"name": "tjl-sdk",
	"version": "0.1.0",
	"description": "工具组件库",
	"main": "./lib/main.js",
	"scripts": {
		"build": "cross-env NODE_ENV=prod rollup -c",
		"build:docx": "node build/index.js",
		"lint:lint-stage": "lint-staged",
		"prepare": "husky install",
		"commit": "git-cz",
		"new": "plop --plopfile ./plop-templates/plopfile.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tujianglin/tjl-sdk.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/tujianglin/tjl-sdk/issues"
	},
	"homepage": "https://github.com/tujianglin/tjl-sdk#readme",
	"devDependencies": {
		"@babel/core": "^7.17.9",
		"@commitlint/config-conventional": "^16.2.1",
		"@rollup/plugin-alias": "^3.1.9",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-commonjs": "^21.0.3",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@types/node": "^17.0.23",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"commitizen": "^4.2.4",
		"commitlint": "^16.2.3",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog-zh": "^0.0.2",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-vue": "^8.6.0",
		"gulp": "^4.0.2",
		"husky": "^7.0.4",
		"lint-staged": "^12.4.0",
		"plop": "^3.0.5",
		"prettier": "^2.6.2",
		"rollup": "^2.70.1",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.31.2",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"dayjs": "^1.11.1",
		"lodash": "^4.17.21"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog-zh"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		]
	}
}
